{
  "name": "identity-rs",
  "version": "1.0.4",
  "description": "Identity Resource Server Authentication Middleware for Express JS",
  "main": "src/index.js",
  "author": "Suhendra Ahmad",
  "license": "MIT",
  "engines": {
    "node": ">= 8",
    "yarn": "*"
  },
  "scripts": {
    "precommit": "yarn lint && yarn test",
    "lint": "eslint '**/*.js' --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles --coverage --coverageDirectory=coverage",
    "test:unit": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles --testPathPattern=\"(/src/.*)\\.(spec).js$\"",
    "test:watch": "cross-env NODE_ENV=test jest --watch --forceExit --detectOpenHandles",
    "validate": "yarn lint && yarn test"
  },
  "keywords": [
    "oidc",
    "identity",
    "resource",
    "server",
    "rs",
    "openid"
  ],
  "dependencies": {
    "@ainasoft/oidc-rs": "^0.3.4",
    "jwks-rsa": "^1.3.0",
    "njwt": "^0.4.0",
    "node-arn": "^1.1.2",
    "secure-random": "^1.1.1",
    "url-join": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.3",
    "eslint": "^5.9.0",
    "eslint-config-astro": "^1.0.8",
    "eslint-import-resolver-module-alias": "^0.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-express": "^1.8.0",
    "jest-extended": "^0.11.0",
    "jest-tobetype": "^1.2.0",
    "jwk-to-pem": "^2.0.0",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",
    "nodemon": "^1.18.9",
    "prettier-eslint": "^8.8.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": "(/src/.*)\\.(test|spec).js$",
    "moduleFileExtensions": [
      "js"
    ],
    "modulePathIgnorePatterns": [
      "src/tests"
    ],
    "testPathIgnorePatterns": [
      "\\index.js$",
      "(/src/.*)\\.(validation|config|index).js$"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/index.js",
      "!src/test/util.js",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text",
      "clover"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
